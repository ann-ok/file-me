@using FileMe.Models
@model HomeModel
@{
    ViewBag.Title = Model.Title;
}

@using (Html.BeginForm())
{
    <div>
        <h2>@Html.DisplayNameFor(m => m.Title)</h2>
    </div>
    <div>
        @Html.EditorFor(m => m.Title)
    </div>
    <div>
        <button type="submit">Отправить</button>
    </div>
    <div>
        @Model.Time.ToShortTimeString()
    </div>
    <div>
        <ul>
            <li>
                @Html.ActionLink("Создать пользователя", "Create", "Person")
            </li>
            <li>
                @Html.ActionLink("Создать группу", "Create", "Group")
            </li>
        </ul>
    </div>
}


