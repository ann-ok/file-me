@using FileMe.Models
@using FileMe.Extensions

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Styles/styles.less" rel="stylesheet/less" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/less.js/2.6.1/less.min.js"></script>
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
</head>
<body>
    <header class="header">
        <div class="container">
            <div class="row d-flex align-item-center">
                <div class="col-lg-2">
                    @Html.ActionLink(@HomeModel.ApplicationName, "Index", "Home", new { area = "" }, new { @class = "header__logo-block" })
                </div>

                <div class="col-lg-10">
                    <div class="header__navigation">
                        <nav class="navbar navbar-expand-lg navbar-light bg-light">
                            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>

                            <div class="collapse navbar-collapse" id="navbarNav">
                                <ul class="navbar-nav">
                                    <li class="nav-item active">
                                        @Html.ActionLink("Главная", "Index", "Home", new { area = "" }, new { @class = "nav-link" })
                                    </li>

                                    <li class="nav-item">
                                        @Html.ActionLink("Пользователи", "Index", "Person", new { area = "" }, new { @class = "nav-link" })
                                    </li>

                                    <li class="nav-item">
                                        @Html.ActionLink("Группы", "Index", "Group", new { area = "" }, new { @class = "nav-link" })
                                    </li>

                                    <li class="nav-item">
                                        @Html.ActionLink("Хранилище", "Index", "Folder", new { area = "" }, new { @class = "nav-link" })
                                    </li>
                                </ul>
                                <div class="account-block">
                                    <div class="account">
                                        @Html.DisplayCurrentPerson()
                                    </div>

                                    <div class="logout">
                                        @Html.ActionLink(Html.DisplayLogOutString(), "Logout", "Account", new { area = "" }, new { @class = "nav-link" })
                                    </div>
                                </div>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="container body-content">
        @RenderBody()
        <footer class="footer">
            <div class="container">
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </div>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>